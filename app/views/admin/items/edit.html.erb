<h3>商品編集画面</h3>
<br>
<%= form_with model: @item, url: admin_item_path do |item| %>
  <table>
    <tr>
      <th class="px-2"><%= item.label :画像 %></th>
      <th class="px-2"><%= item.label :商品番号 %></th>
      <th class="px-2"><%= item.label :小ジャンル %></th>
      <th class="px-2"><%= item.label :商品名 %></th>
      <th class="px-2"><%= item.label :紹介文 %></th>
      <th class="px-2"><%= item.label :価格（税抜） %></th>
      <th></th>
    </tr>
    <tr valign="top">
      <td class="px-2"><%= item.file_field :image %></td>
      <td class="px-2"><%= item.number_field :code, size: 10 %></td>
      <td class="px-2"><%= item.collection_select(:small_genre_id, @small_genres, :id, :name) %></td>
      <td class="px-2"><%= item.text_field :name %></td>
      <td class="px-2"><%= item.text_area :introduction, size: "30x5" %></td>
      <td class="px-2"><%= item.number_field :price %></td>
      <td>
        <%= item.submit "変更する", class: "btn btn-primary p-2" %>
        <%= link_to admin_item_path(@item.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
          <button type="button" class="btn btn-danger p-2">削除する</button>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>
<br>