<h2>会員新規登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table border="1">
    <tr align="center" style="height:50px;">
      <th style="width:25%">項目</td>
      <th style="width:75%">入力欄</td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :会員番号 %></td>
      <td>　　<%= f.number_field :number %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :名前 %></td>
      <td>　<%= f.label :姓 %><%= f.text_field :last_name %>　　<%= f.label :名 %><%= f.text_field :first_name %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :フリガナ %></td>
      <td><%= f.label :セイ %><%= f.text_field :last_name_kana %>　<%= f.label :メイ %><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :メールアドレス %></td>
      <td>　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :パスワード %></td>
      <td>
        　　<%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <span>(<%= @minimum_password_length %> 文字以上)</span>
        <% end %>
      </td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :郵便番号 %></td>
      <td>　　<%= f.text_field :postal_code %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :住所%></td>
      <td>　　<%= f.text_field :address %></td>
    </tr>
    <tr style="height:50px;">
      <td align="center"><%= f.label :電話番号 %></td>
      <td>　　<%= f.text_field :telephone_number %></td>
    </tr>
    <tr style="height:50px;">
      <td colspan="2" align="center"><%= f.submit "登録完了", class: "btn btn-secondary" %></td>
    </tr>
  </table>
<% end %>
